* {
  box-sizing: border-box;
  margin    : 0;
  padding   : 0;
}
.sidebar {
  top: 0;
}
h1, h2, h3, h4, h5, h6 {
  line-height: 2;
  margin: 1rem 0;
}
h1 {
  font-size: 1.5rem;
}
h2 {
  font-size: 1.3rem;
}
h3 {
  font-size: 1.1rem;
}
h4 {
  font-size: 0.9rem;
}
h5 {
  font-size: 0.8rem;
}
ol, p, ul {
  line-height: 2.5;
}
#main-layout {
  min-height: 100%;
  width     : 100%;
  font-size : 16px;
  color     : #2c3e50;
  box-sizing: border-box;
}

#header {
  height          : 3.6rem;
  line-height     : 3.6rem;
  padding         : 0 100px;
  border-bottom   : 1px solid #ddd;
  box-shadow      : 0 2px 10px #eee;
  position        : fixed;
  top             : 0;
  left            : 0;
  right           : 0;
  z-index         : 100;
  background-color: #f0f0f0;
}

#content,
#home {
  left    : 0;
  right   : 0;
  position: fixed;
  top     : 0;
  bottom  : 0;

}

#content {
  background-color: #f4f4f4;

  .home-side {
    background-color: #001529;
    color           : rgba(255,255,255,0.65);
  }
  .content-side {
    background-color: rgba(255, 255, 255, 0.7);
    color: #595959;
    padding-left: 15px;
  }
  .sidebar {
    // background      : #2a2a2a;
    width           : 18rem;

    .personal-info {
      height: 20rem;
    }

    .profile-head {
      position           : absolute;
      left               : 50%;
      transform          : translate(-50%);
      top                : 4rem;
      width              : 8rem;
      height             : 8rem;
      border-radius      : 50%;
      background-position: center;
      background-size    : 8rem 8rem;
      background-image   : url(/images/profile_head.png);
    }

    .personal-name {
      position  : absolute;
      left      : 0;
      right     : 0;
      top       : 13rem;
      text-align: center;
      font-size : 1.3rem;


    }
    .nav-first-title {
      text-align: center;

      span {
        height          : 2.8rem;
        line-height     : 2.8rem;
        display         : inline-block;
        border-radius   : 1.5rem;
        text-align      : center;
        width           : 60%;
        margin          : 0.5rem auto;
        background-color: rgba(255, 255, 255, 0.2);
        cursor          : pointer;

        &:hover {
          color: #fafafa;
        }
      }

      .active {
        background-color: #1890ff;
        color: #fff;
      }

      ul {
        margin: 0 auto;
        width : 60%;
      }
    }

    .quotes {
      text-align: center;
      margin: 10rem 0 1rem;
      width     : 100%;

      .contact {
        margin-top: 0.5rem;

        a {
          color       : hsla(0, 0%, 100%, .7);
          opacity     : 0.3;
          font-size   : 1.4rem;
          margin-right: 0.5rem;

          &:hover {
            opacity: 1;
          }
        }

        .ion-md-contact {
          font-size: 1.55rem;
        }
      }

    }
    
    .headers-list {
      position: relative;
      top: 3.5rem;
      list-style: none;
      li {
        cursor: pointer;
        font-weight: 500;
        font-size: 14px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        &:hover {
          color: #3eaf7c;
        }
      }
    }
    .return-home {
      text-align: center;
      border-bottom: 1px solid #ddd;
      height: 3rem;
      line-height: 3rem;
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: pointer;
      .blog-img {
        margin-right: 20px;
        border: 1px solid #ccc;
        width              : 2.5rem;
        height             : 2.5rem;
        line-height: 2.5rem;
        border-radius      : 50%;
        background-position: center;
        background-size    : 2.2rem 2.2rem;
        background-image   : url(/images/profile_head.png);
        background-repeat: no-repeat;
      }
    }
  }

  .container {
    position  : absolute;
    left      : 18rem;
    right     : 0;
    height    : 100%;
    background: url(/images/background_repeat.png);
  }
  .page-content {
    padding: 1.5rem 8rem;
    background-color: hsla(0, 0%, 100%, .7);
    border-radius: 8px;
    .content__default > p {
      margin: 1rem 0;
      line-height: 2;
    }
  }
  .page-content,
  .pages-list {
    margin: 2rem 3rem 0.5rem 3rem;
  }

  .pages-list {

    .lg-screen,
    .sm-screen {
      display        : flex;
      flex-wrap      : wrap;
      justify-content: space-between;
      width          : 100%;
    }

    .sm-screen {
      display: none;
    }

    .col {
      width: calc(33.3% - 1.5rem);
    }

    

    .page-chunk-right {
      float : right;
      height: 27rem;
    }
  }

  .content {
    padding         : 1.5rem 10rem;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius   : 8px;
  }

  .directory {
    width      : 12rem;
    border-left: 0.2rem solid rgba(255, 255, 255, 0.5);
    height     : 100%;
    position   : absolute;
    right      : 0;
  }

  @media screen and (max-width: 1600px) and (min-width: 1288px) {
    .personal-info {
      height: 16rem !important;
    }

    .content {
      padding: 1.5rem 5rem;
    }
    .page-content {
      padding: 1.2rem 5rem;
    }
    .sidebar {
      width: 15rem;
    }

    .container {
      left : 15rem;
      right: 0;
    }

    .pages-list {
      .sm-screen {
        display: flex;
      }

      .lg-screen {
        display: none;
      }

      .col {
        width: calc(50% - 0.8rem);
      }

      .page-chunk {
        width: 100%;
      }
    }

    .quotes {
      margin-top: 3rem !important;
    }
  }

  @media screen and (max-width: 1288px) and (min-width: 520px) {
    .personal-info {
      height: 16rem !important;
    }

    .page-content {
      padding: 1rem 2rem;
    }

    .content {
      padding: 1.5rem 5rem;

    }

    .sidebar {
      width: 17rem;
    }

    .container {
      left : 17rem;
      right: 0;
    }

    .pages-list {
      .sm-screen {
        display: flex;
      }

      .lg-screen {
        display: none;
      }

      .col {
        width: calc(50% - 0.8rem);
      }

      .page-chunk {
        width: 100%;
      }
    }

    .quotes {
      margin-top: 3rem !important;
    }
  }
}

#home {
  background-color: #f0f0f0;

}
